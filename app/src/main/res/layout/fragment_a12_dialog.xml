<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

    <Button
            android:id="@+id/dialog_show"
            android:text="SHOW IT !!!!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_marginTop="12dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/dialog_blur_dialog_background_text"
            android:text="Dialog background alpha: 10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <SeekBar
            android:padding="8dp"
            android:id="@+id/dialog_blur_dialog_background"
            android:max="100"
            android:progress="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_marginTop="12dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/dialog_alpha_dialog_background_text"
            android:text="Dialog background blur: 120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <SeekBar
            android:padding="8dp"
            android:id="@+id/dialog_alpha_dialog_background"
            android:max="255"
            android:progress="120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_marginTop="12dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/dialog_blur_window_background_text"
            android:text="Window background blur: 20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <SeekBar
            android:padding="8dp"
            android:id="@+id/dialog_blur_window_background"
            android:max="100"
            android:progress="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_marginTop="12dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/dialog_dim_text"
            android:text="Window background dim: 20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <SeekBar
            android:padding="8dp"
            android:id="@+id/dialog_dim"
            android:max="10"
            android:progress="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:text="@string/long_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>